            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y35"
            android:layout_marginLeft="@dimen/x46"
            android:layout_marginTop="@dimen/y135"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:clickable="true"
                android:id="@+id/tv_item1"
                android:layout_width="@dimen/x510"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/file_list_item_on_focused"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ts24" />

            <TextView
                android:id="@+id/tv_item2"
                android:layout_width="@dimen/x510"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/file_list_item_on_focused"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ts24" />

            <TextView
                android:id="@+id/tv_item3"
                android:layout_width="@dimen/x510"
                android:layout_height="match_parent"
                android:clickable="true"
