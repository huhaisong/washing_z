<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:id = "@+id/photo_layout"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photoView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/faceIDValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="xxxxx"
            android:textAlignment="center"
            android:textSize="14dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="100dp"
        android:id="@+id/infor_layout"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/first_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/washingEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="手洗い回数:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/washingEventValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/moveAwayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="50dp"
                android:text="中断回数:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/moveAwayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/second_line"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/averageTempTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="平均体温:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/averageTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="36.7"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/lastTempTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:text="今回体温:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lastTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
