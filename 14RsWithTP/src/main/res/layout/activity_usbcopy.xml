<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usbcopy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    tools:context="com.example.hu.mediaplayerapk.usb_copy.USBCopyActivity">

    <LinearLayout
        android:id="@+id/layout_usb_copy"
        android:layout_width="@dimen/x603"
        android:layout_height="@dimen/y300"
        android:background="@drawable/usb_content_bg"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_usb_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usb_copy_prepare"
            android:textColor="@color/white"
            android:textSize="@dimen/ts24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_usb_copy_file"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y300"
        android:background="@drawable/copy_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_usb_copy_file_name"
                android:layout_width="@dimen/x600"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y30"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textColor="@color/black"
                android:textSize="@dimen/ts24" />

            <TextView
                android:id="@+id/tv_usb_copy_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/ts24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y50"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x126"
                android:layout_height="@dimen/y126"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/copy_file" />

            <ImageView
                android:id="@+id/image_usb_copy_anim"
                android:layout_width="@dimen/x235"
                android:layout_height="@dimen/y35"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:src="@drawable/copy_file_anim" />

            <ImageView
                android:layout_width="@dimen/x126"
                android:layout_height="@dimen/y126"
                android:layout_marginRight="@dimen/x50"
                android:background="@drawable/copy_file" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
