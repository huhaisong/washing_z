<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x603"
        android:layout_height="@dimen/y300"
        android:background="@drawable/usb_content_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y60">

            <TextView
                android:id="@+id/tv_choose_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="you want to choose this"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yes_no_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y80"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_choose_yes"
                    android:layout_width="@dimen/x136"
                    android:layout_height="@dimen/y51"
                    android:background="@drawable/dialog_yes_focuse"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_choose_no"
                    android:layout_width="@dimen/x136"
                    android:layout_height="@dimen/y51"
                    android:background="@drawable/dialog_no_focuse"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>