<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.hu.mediaplayerapk.ui.activity.OSDSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/osd_layout"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timer_setting_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y35"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/top_icon_timer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/timer_setting"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/advance_setting_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/top_icon_tools" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/detail_setting"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_preview_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/top_icon_video_preview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/video_preview"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_model_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/top_icon_video_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/play_model"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_setting_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/top_icon_photo_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/image_setting"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quit_layout"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y146"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/main_menu_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/top_icon_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/quit"
                android:textColor="@color/white"
                android:textSize="@dimen/ts36" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/osd_introduce_layout"
        android:layout_width="@dimen/x990"
        android:layout_height="@dimen/y146"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginRight="@dimen/x150"
        android:background="@drawable/osd_introduce_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_osd_introduce"
            android:layout_width="@dimen/x960"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/y10"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x10"
            android:textColor="@color/white"
            android:textSize="@dimen/ts36" />
    </LinearLayout>

</RelativeLayout>
