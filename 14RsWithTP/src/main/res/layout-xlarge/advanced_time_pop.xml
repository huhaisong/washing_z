<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_advanced_time_hour"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y62"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/advanced_hour_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingRight="@dimen/x5"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/ts24" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y44"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/work_time_sep" />

        <TextView
            android:id="@+id/tv_advanced_time_minute"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y62"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/advanced_hour_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingRight="@dimen/x5"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/ts24" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y44"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/work_time_sep" />

        <TextView
            android:id="@+id/tv_advanced_time_second"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y62"
            android:background="@drawable/advanced_hour_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingRight="@dimen/x5"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/ts24" />
    </LinearLayout>
</LinearLayout>