<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/x251"
        android:layout_height="@dimen/y258"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/level3_4menu_unsel_bg"
        android:layout_marginTop="@dimen/y6"
        android:paddingBottom="@dimen/y10">

        <TextView
            android:id="@+id/tv_play_back_mode_one_file_impactv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/level2_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/play_back_mode_one_file"
            android:textColor="@color/white"
            android:textSize="@dimen/ts18" />

        <TextView
            android:id="@+id/tv_play_back_mode_all_file_impactv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/level2_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/play_back_mode_all_file"
            android:textColor="@color/white"
            android:textSize="@dimen/ts18" />

        <TextView
            android:id="@+id/tv_play_back_mode_program_impactv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/level2_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/play_back_mode_program"
            android:textColor="@color/white"
            android:textSize="@dimen/ts18" />

        <TextView
            android:id="@+id/tv_play_back_mode_schedule_impactv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/level2_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/play_back_mode_Schedule"
            android:textColor="@color/white"
            android:textSize="@dimen/ts18" />
    </LinearLayout>
</LinearLayout>