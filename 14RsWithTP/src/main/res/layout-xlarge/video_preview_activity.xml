<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <SurfaceView
        android:id="@+id/surfaceView_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/preview_content"
        android:layout_width="1px"
        android:layout_height="1px" />

    <LinearLayout
        android:id="@+id/onError_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_onError"
            android:layout_width="@dimen/x603"
            android:layout_height="@dimen/y300"
            android:background="@drawable/usb_content_bg"
            android:gravity="center"
            android:text="@string/mediaplayer_onFileError"
            android:textColor="@color/white"
            android:textSize="@dimen/ts36" />
    </LinearLayout>

</RelativeLayout>