<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/x251"
        android:layout_height="@dimen/y320"
        android:background="@drawable/level3_5menu_unsel_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/image_setting_direction_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/ts24"
            android:background="@drawable/level3_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/image_setting_direction_nomal"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/image_setting_direction_random"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/ts24"
            android:background="@drawable/level3_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/image_setting_direction_random"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/image_setting_direction_left_to_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/ts24"
            android:layout_weight="1"
            android:background="@drawable/level3_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/image_setting_direction_left_to_right"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/image_setting_direction_up_to_down"
            android:layout_width="match_parent"
            android:textSize="@dimen/ts24"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/level3_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/image_setting_direction_up_to_down"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/image_setting_direction_horizontal_cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/ts24"
            android:layout_weight="1"
            android:background="@drawable/level3_item_focused"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/image_setting_direction_horizontal_cross"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>